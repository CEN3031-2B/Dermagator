{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "yarn workspace client start",
    "server": "yarn workspace server start",
    "start": "concurrently --kill-others-on-fail \"yarn client\" \"yarn server\"",
    "heroku-postbuild": "yarn install && yarn workspace server build && yarn workspace client build"
  },
  "dependencies": {
    "concurrently": "^5.0.0",
    "yarn": "^1.19.1"
  },

  "engines": {
    "node": "^12.13.0"
  }
}
